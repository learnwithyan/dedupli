{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "script"
  },
  "rules": {
    "no-const-assign": "off",
    "no-this-before-super": "off",
    "no-undef": "warn",
    "no-unreachable": "off",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "constructor-super": "off",
    "valid-typeof": "off"
  }
}
